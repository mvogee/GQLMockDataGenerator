{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "rootDir": "./",
    "resolveJsonModule": true,
  },
  "include": ["src/**/*",],
  "exclude": ["node_modules", "**/*.spec.ts", "generated.ts", "dist", "mockData.json",]
}
